@model Application
@using System.Security.Claims
<!-- Header End -->
<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Job Details</h1>
        <nav aria-label="breadcrumb">
        </nav>
    </div>
</div>
<!-- Header End -->
<!-- Job Detail Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-5">
                    <img class="flex-shrink-0 img-fluid border rounded" src="@ViewBag.model.JobPostingImageUrl" alt="" style="width: 80px; height: 80px;">
                    <div class="text-start ps-4">
                        <h3 class="mb-3">@ViewBag.model.Users.UserCompanyName</h3>
                    </div>
                </div>
                <div class="mb-5">
                    <h4 class="mb-3">@ViewBag.model.JobPostingTitle</h4>
                    <p>@Html.Raw(ViewBag.model.JobPostingDescription)</p>
                </div>
                @if (User.Identity.IsAuthenticated)

                {
                    <div class="">
                        <h4 class="mb-4">Apply For The Job</h4>
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-12">
                                    <textarea class="form-control" rows="5" placeholder="Curriculum Vitae" asp-for="Cv"></textarea>
                                    <input type="hidden" asp-for="JobPostingId" value="@ViewBag.model.JobPostingId" />
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit"> Cv Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }             
               
            </div>

            <div class="col-lg-4">
                <a href="/Home/CompanyDetails/@ViewBag.model.Users.UserId" class="text-decoration-none">
                    <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
                        <h4 class="mb-4">Company Details</h4>
                        <img class="flex-shrink-0 img-fluid border rounded" src="@ViewBag.model.Users.UserImageUrl" alt="" style="width: 80px; height: 80px;"> <hr />
                        <p><i class="fa fa-angle-right text-primary me-2"></i>@ViewBag.model.Users.UserFullName</p>
                        <p><i class="fa fa-angle-right text-primary me-2"></i>@ViewBag.model.Users.UserTelephone</p>
                        <p><i class="fa fa-angle-right text-primary me-2"></i>@ViewBag.model.Users.UserCompanyAddress</p>
                    </div>
                </a>
                <div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
                    <h4 class="mb-4">@ViewBag.model.Sectors.SectorFullName</h4>
                    <p class="m-0">@Html.Raw(ViewBag.model.Sectors.SectorDescription)</p>
                </div>
            </div>
        </div>
    </div>
</div>

